---
import type { MarkdownHeading } from 'astro';

import type { CategoryWithNotes } from '../utils/notes';

import NotesSidebar from '../components/sidebar.astro';
import TableOfContents from '../components/table-of-contents.astro';
import Layout from './default-layout.astro';

interface Props {
  activeId?: string;
  description?: string;
  headings?: MarkdownHeading[];
  navigation: CategoryWithNotes[];
  showToc?: boolean;
  title: string;
}

const { activeId, description, headings = [], navigation, showToc = true, title } = Astro.props;
---

<Layout description={description} title={title}>
  <div class="container py-5">
    <div class="d-flex">
      <!-- 側邊導覽 -->
      <div class="flex-shrink-0">
        <NotesSidebar activeId={activeId} navigation={navigation} />
      </div>

      <!-- 內文 -->
      <div class="flex-grow-1">
        <slot />
      </div>

      <!-- 目錄 -->
      {
        showToc && headings.length > 0 && (
          <div class="d-none d-lg-block  flex-shrink-0" style={{ width: '200px' }}>
            <TableOfContents headings={headings} variant="desktop" />
          </div>
        )
      }
    </div>
  </div>
</Layout>
