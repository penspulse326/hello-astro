---
// 此組件已棄用，請使用 ContentSidebar
// 保留此文件以維持向後兼容
import type { CategoryWithNotes } from '../utils/notes';

import ContentSidebar from './content-sidebar.astro';

interface Props {
  activeId?: string;
  ariaLabel?: string;
  navigation: CategoryWithNotes[];
}

const { activeId, ariaLabel = '研究筆記側邊導覽', navigation } = Astro.props;

// 將 CategoryWithNotes 轉換為 CategoryWithContent 格式
const convertedNavigation = navigation.map((cat) => ({
  ...cat,
  items: cat.notes,
}));
---

<ContentSidebar activeId={activeId} ariaLabel={ariaLabel} navigation={convertedNavigation} />
