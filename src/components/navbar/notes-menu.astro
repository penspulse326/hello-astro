---
// 此組件已棄用，請使用 ContentMenu
// 保留此文件以維持向後兼容
import type { CategoryWithNotes } from '../../utils/notes';

import ContentMenu from './content-menu.astro';
interface Props {
  activeNoteId?: string;
  notesNavigation: CategoryWithNotes[];
}

const { activeNoteId, notesNavigation } = Astro.props as Props;

// 將 CategoryWithNotes 轉換為 CategoryWithContent 格式
const convertedNavigation = notesNavigation.map((cat) => ({
  ...cat,
  items: cat.notes,
}));
---

<ContentMenu activeId={activeNoteId} navigation={convertedNavigation} />
