---
import type { CategoryWithNotes, CategoryNoteItem } from '../../utils/notes';

interface Props {
  navigation: CategoryWithNotes[];
  activeId?: string;
  id: string;
  aAttrs?: (note: CategoryNoteItem) => Record<string, string | boolean | undefined>;
}

const { navigation, activeId, id, aAttrs } = Astro.props;

const sanitizeId = (value: string) => value.replace(/[^a-zA-Z0-9_-]/g, '-');
---

<div class="accordion accordion-flush" id={id}>
  {
    navigation.map((category: CategoryWithNotes) => {
      const sectionId = `${id}-${sanitizeId(category.id)}`;
      const collapseId = `${sectionId}-collapse`;
      const headingId = `${sectionId}-heading`;
      const isExpanded = category.notes.some((note: CategoryNoteItem) => note.id === activeId);

      return (
        <div class="accordion-item">
          <h2 class="accordion-header" id={headingId}>
            <button
              class:list={{
                'accordion-button': true,
                collapsed: !isExpanded,
              }}
              type="button"
              data-bs-toggle="collapse"
              data-bs-target={`#${collapseId}`}
              aria-expanded={isExpanded}
              aria-controls={collapseId}
            >
              {category.label}
            </button>
          </h2>
          <div
            id={collapseId}
            class:list={{
              'accordion-collapse collapse': true,
              show: isExpanded,
            }}
            aria-labelledby={headingId}
          >
            <div class="accordion-body">
              <ul class="notes-nav__list">
                {category.notes.map((note: CategoryNoteItem) => (
                  <li class="notes-nav__item">
                    <a
                      href={note.url}
                      class:list={['notes-nav__link', { 'notes-nav__link--active': note.id === activeId }]}
                      {...(aAttrs?.(note) || {})}
                    >
                      {note.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      );
    })
  }
</div>

<style>
  .accordion {
    --bs-accordion-color: inherit;
    --bs-accordion-bg: transparent;
    --bs-accordion-border-color: transparent;
  }

  .accordion-item {
    border: none;
    border-radius: 0;
  }

  .accordion-button {
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 8px 0;
    background-color: transparent;
    box-shadow: none;
    border: none;
    border-bottom: 1px solid var(--bs-border-color);
    border-radius: 0;
  }

  .accordion-button::after {
    margin-left: auto;
  }

  .accordion-button:not(.collapsed) {
    color: inherit;
    background-color: transparent;
  }

  .accordion-body {
    padding: 0.5rem 0 0;
  }

  .notes-nav__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
  }

  .notes-nav__item {
    border-radius: 0;
  }

  .notes-nav__item:last-child {
    border-bottom: none;
  }

  .notes-nav__link {
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease-in-out;
  }

  .notes-nav__link:hover {
    background-color: var(--bs-primary-bg-subtle);
    color: var(--bs-primary);
  }

  .notes-nav__link--active {
    font-weight: 600;
    color: var(--bs-primary);
    background-color: var(--bs-primary-bg-subtle);
  }
</style>
