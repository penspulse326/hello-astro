---
// 此組件已棄用，請使用 ContentNavigation
// 保留此文件以維持向後兼容
import type { CategoryNoteItem, CategoryWithNotes } from '../../utils/notes';

import ContentNavigation from '../content-navigation.astro';

interface Props {
  aAttrs?: (note: CategoryNoteItem) => Record<string, boolean | string | undefined>;
  activeId?: string;
  id: string;
  navigation: CategoryWithNotes[];
}

const { aAttrs, activeId, id, navigation } = Astro.props;

// 將 CategoryWithNotes 轉換為 CategoryWithContent 格式
const convertedNavigation = navigation.map((cat) => ({
  ...cat,
  items: cat.notes,
}));
---

<ContentNavigation aAttrs={aAttrs} activeId={activeId} id={id} navigation={convertedNavigation} />
